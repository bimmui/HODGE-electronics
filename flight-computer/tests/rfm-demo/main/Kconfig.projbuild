        default 13

    config SPI_MISO
        int "MISO GPIO Num"
        default 12
    
    config RFM69_CHIP_SELECT
        int "CS Pin GPIO Num"
        default 27

    config RFM69_HARDWARE_RESET
        int "Reset Pin GPIO Num"
        default 2
    

endmenu